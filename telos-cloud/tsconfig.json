{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "lib": ["esnext"],
    "include": [
        "src/**/*.ts",
        "src/**/*.scss"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}